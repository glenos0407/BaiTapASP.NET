@model Bai5_SendEmailWithAttach.Models.MailInformation

@{
    ViewBag.Title = "Send Mail with Attachment";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script type="text/javascript"> 
        var checkMessage = "@ViewBag.Message";

        if (checkMessage.trim() != "") {
            alert(checkMessage);
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @using (Html.BeginForm("Index", "Mail", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.sender, "From")
                        @Html.EditorFor(model => model.sender, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.reciever, "To")
                        @Html.EditorFor(model => model.reciever, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password</label>
                        @Html.PasswordFor(model => model.pwd, new { @class = "form-control", @id = "pwd" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.subject, "Subject")
                        @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <label>Attachment</label>
                    <input type="file" name="fileUpload" id="fileUpload" />
                    <br />
                    <div class="form-group">
                        <label for="textarea">Notes</label>
                        @Html.TextAreaFor(model => model.notes, new { @class = "form-control", @rows = "8", @cols = "8", @id = "textarea" })
                    </div>

                    <input type="submit" id="btnSubmit" class="btn btn-primary" value="Send" style="width: 10vw;" />
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
