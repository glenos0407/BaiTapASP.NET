@model List<Bai9_QLThongTinSV.Models.Student>

@{
    ViewBag.Title = "Student Manager";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style type="text/css">
        table tr td{
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">

                <div class="row" style="padding: 1em 0;">
                    <div class="col-sm-12">
                        <h4><b>LIST OF STUDENT</b></h4>
                        <input type="button" class="btn btn-success" value="Create New" onclick="window.location.href = '@Url.Action("Create","Student")'"/>
                    </div>
                </div>
                <div class="row" style="border-top: 1px solid gray; padding: 1em 0;">
                    <div class="col-sm-12">
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <td><b>Student ID</b></td>
                                    <td><b>Student Name</b></td>
                                    <td><b>Date of Birth</b></td>
                                    <td><b>Avatar</b></td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Bai9_QLThongTinSV.Models.Student student in Model)
                                {
                                    <tr>
                                        <td>@student.StudentID</td>
                                        <td>@student.FullName</td>
                                        <td>@student.DateOfBirth.ToString("d")</td>
                                        <td>@student.Avatar</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = student.StudentID })&nbsp;|
                                            @Html.ActionLink("Details", "Details", new { id = student.StudentID })&nbsp;|
                                            @Html.ActionLink("Delete", "Delete", new { id = student.StudentID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
