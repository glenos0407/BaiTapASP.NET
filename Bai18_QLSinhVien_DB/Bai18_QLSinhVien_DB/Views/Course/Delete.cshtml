@model Entity.Course_Ent

@{
    ViewBag.Title = "Delete Course";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/all.css" type="text/css">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script type="text/javascript">
        if (("@ViewBag.Message") != "") {
            alert("@ViewBag.Message");
        }
    </script>
</head>
<body>
    <a href="@Url.Action("Course","Course")">< Trở Về Trang Chủ</a>
    <br />
    <h3>Bạn Có Muốn Xoá ?</h3>
    <br />
    <span><b>Course ID:&nbsp;</b></span><span>@Model.CourseID</span>
    <br />
    <span><b>Course Name:&nbsp;</b></span><span>@Model.CourseName</span>
    <br />
    <span><b>Location:&nbsp;</b></span><span>@Model.Location</span>
    <br />
    <span><b>Location:&nbsp;</b></span><span>@Model.Teacher.TeacherName</span>
    <br />
    <form method="post" action="@Url.Action("Delete_Accept","Course", new { id = Model.CourseID })">
        <input type="submit" class="btn btn-success" style="border-radius: 0; width: 10vw;" value="OK" />
    </form>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>




