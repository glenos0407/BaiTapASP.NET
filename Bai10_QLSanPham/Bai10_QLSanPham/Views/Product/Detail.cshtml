@model Bai10_QLSanPham.Models.Product

@{
    ViewBag.Title = Model.Name;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        div.row:nth-child(2) {
            padding-top: 2em;
            padding-bottom: 3em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12" style="padding: 0;">
                <nav class="navbar navbar-inverse" style="border-radius: 0; display: flex; justify-content: center;">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "Product")">Home</a></li>
                        <li><a href="@Url.Action("Create", "Product")">Create</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.ActionLink("< Back To Home", "Index")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <img src="../../Imgs/@Model.Image" class="img-responsive" data-zoom-image="../../Imgs/@Model.Image" id="imgProduct" />
            </div>
            <div class="col-sm-6">
                <h3>@Model.Name</h3>
                <h4>@Model.Price $</h4>
                <a href="@Url.Action("Edit", "Product", new { id = Model.ProductID })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", "Product", new { id = Model.ProductID })" class="btn btn-danger" data-toggle="modal" data-target="#modalAcceptDelete">Delete</a>
            </div>
        </div>
    </div>

    <div id="modalAcceptDelete" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Bạn Có Muốn Xoá Sản Phẩm Không ?</h4>
                </div>
                <div class="modal-footer">
                    <form action="@Url.Action("Delete","Product", new { id = Model.ProductID })" method="post">
                        <button type="submit" class="btn btn-success">OK</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/elevateZoom-3.0.8.min.js"></script>
    <script type="text/javascript">
        $("#imgProduct").elevateZoom();
    </script>
</body>
</html>



